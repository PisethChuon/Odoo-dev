<odoo>
  <data>
    <!-- explicit list view definition -->
 
    <record model="ir.ui.view" id="banquet.list">
      <field name="name">banquet list</field>
      <field name="model">banquet.banquet</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="banquet.action_window">
      <field name="name">banquet window</field>
      <field name="res_model">banquet.banquet</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="banquet.action_server">
      <field name="name">banquet server</field>
      <field name="model_id" ref="model_banquet_banquet"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="banquet" id="banquet.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="banquet.menu_1" parent="banquet.menu_root"/>
    <menuitem name="Menu 2" id="banquet.menu_2" parent="banquet.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="banquet.menu_1_list" parent="banquet.menu_1"
              action="banquet.action_window"/>
    <menuitem name="Server to list" id="banquet" parent="banquet.menu_2"
              action="banquet.action_server"/>

  </data>
</odoo>
